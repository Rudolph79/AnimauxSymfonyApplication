{% extends 'base.html.twig' %}

{% block title %}Information de {{ personne.name }}!{% endblock %}

{% block myTitle %}{{ personne.name }}{% endblock %}

{% block body %}
    <h3>La liste des animaux possédés:</h3>
    {% for dispose in personne.disposes %}
        <div class="row align-items-center">
            <div class="col-2">
                <img src="{{ asset('images/' ~dispose.animal.image) }}">
            </div>
            <div class="col">
                <h2><a href="{{ path('show_animal', {'id': dispose.animal.id}) }}">
                        {{ dispose.animal.name }}
                    </a>
                </h2>
                <div>Nombre : {{ dispose.nb }}</div>
            </div>
        </div>
    {% endfor %}
{% endblock %}