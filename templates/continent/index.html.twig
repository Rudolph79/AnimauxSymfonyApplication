{% extends 'base.html.twig' %}

{% block title %}Hello ContinentController!{% endblock %}

{% block body %}
    <h1 class="border border-dark rounded bg-primary text-white p-2 m-2">
        Voici la liste des continents
    </h1>
    {% for continent in continents %}
        <h2 class="border-bottom border-primary">
            <a href="{{ path('show_continent', {'id': continent.id}) }}">
                {{ continent.libelle }}
            </a>
        </h2>
        {% for animal in continent.animals %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6 col-lg-2 text-center">
                        <img src="images/{{ animal.image }}" class="img-fluid">
                    </div>
                    <div class="col text-center">
                        <h2><a href="{{ path('show_animal', { 'id': animal.id }) }}">{{ animal.name }}</a></h2>
                        <div>{{ animal.description }}</div>
                        <a href="{{ path('show_family', { 'id': animal.famille.id }) }}" class="btn btn-primary">
                            {{ animal.famille.libelle }}
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}
